<?xml version="1.0" encoding="utf-8"?>
<!-- circle_checkbox.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#4CAF50" /> <!-- Green color for checked state -->
        </shape>
    </item>

    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- White color for unchecked state with a border -->
        </shape>
    </item>
</selector>
