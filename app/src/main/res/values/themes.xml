<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyLauncher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize other attributes as needed -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">false</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_selector</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="BottomSheetTransparentBgTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleTransparentBg</item>
    </style>
    <style name="textview_blue_regular_16">
        <item name="android:textColor">@color/grey_A2</item>
        <item name="android:textColorHint">@color/grey_A2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="BottomSheetStyleTransparentBg" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="progressBarStyle" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
    </style>




</resources>