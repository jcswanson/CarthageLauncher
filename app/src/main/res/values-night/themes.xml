<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Mode theme. -->
    <style name="Theme.MyLauncher.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700_dark</item>
        <item name="colorOnPrimary">@color/black_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200_dark</item>
        <item name="colorSecondaryVariant">@color/teal_700_dark</item>
        <item name="colorOnSecondary">@color/black_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Other attributes -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabLayoutStyle.Dark" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance.Dark</item>
    </style>

    <style name="CustomTabTextAppearance.Dark" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_text_dark</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomSheetStyleTransparentBg.Dark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetTransparentBgTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleTransparentBg</item>
    </style>

    <style name="textview_blue_regular_16_dark">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

</resources>